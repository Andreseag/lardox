---
import Layout from "../layouts/Layout.astro";
import informationData from "../data/information.data.json";
---

<Layout title="Information" />

<section class="infomation text-white mt-28">
  <div
    class="information__container mb-32 mt-10 px-4 flex flex-col lg:flex-row justify-between items-center w-full"
  >
    <div class="information__aside w-full lg:w-1/3 mb-4 lg:mb-0">
      <h6>Biograf√≠a</h6>
    </div>
    <div class="information__content w-full lg:w-2/3">
      {
        informationData.map((item) => (
          <>
            <p class="text-2xl mb-10">{item.description}</p>
          </>
        ))
      }
    </div>
  </div>
</section>
